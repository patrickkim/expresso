<!DOCTYPE html>
<html>
  <head>
    <title>Mocha <%= @title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="/test/mocha.css" />
  </head>
  <body>
    <div id="mocha"></div>

    <!-- Load Test Framework -->
    <script src="/test/chai.js"></script>
    <script src="/test/mocha.js"></script>
    <script src="/test/mocha_setup.js"></script>

    <!-- app to test! -->
    <%- js('scripts') %>

    <!-- Run Tests -->
    <%- js('tests/client_tests') %>
    <script>
      mocha.run();
    </script>
  </body>
</html>