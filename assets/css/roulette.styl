body { background: #000 }

#game-container
  position: relative
  width: 520px
  height: 510px
  margin: 15px auto 
  background: green

// Roulette Styles
#roulette
  position: relative
  width: 520px
  height: 510px
  margin:  0 auto 
  background: url("/images/bg.jpg") 0 0 no-repeat
  // border: 2px solid red

#roulette-wheel
  position: absolute
  top: 4px 
  left: 80px
  width: 365px
  height: 365px
  // border: 1px solid orange

#wheel
  @extend .is_spinning

  position: absolute
  top: 50% 
  left: 50%
  margin: -115px 0 0 -115px
  width: 231px
  height: 231px
  background: url("/images/wheel.png") center center no-repeat

#wheel-overlay
  position: absolute
  top: 0 
  left: 0
  width: 363px
  height: 363px
  background: url("/images/overlay.png") 0 0 no-repeat

#ball-stage
  @extend .is_spinning

  position: absolute
  top: 50% 
  left: 50%
  margin: -159px 0 0  -159px
  width: 318px 
  height: 318px

// Throwaway buttons
#spin
  z-index: 2
  position: absolute
  bottom: 15px 
  right: 15px
  width: 115px 
  height: 75px
  background url("/images/anim-spin.gif") 0 0 no-repeat
  border: none
  cursor: pointer

  &:focus
   outline: none

  &:active
    margin-bottom: -1px

// Maybe keep?
#roulette-history
  position: absolute
  top: 15px 
  right: 5px
  width: 40px 
  height: 200px
  padding: 3px
  background: #000
  border-radius: 5px
  box-shadow: 0 1px 4px rgba(0,0,0,0.5)
  overflow: hidden

  #selected-numbers
    padding: 0 margin: 0

    li
      font-size: 11px
      font-weight: bold
      padding: 2px
      margin: 0

  .n-1, .n-3, .n-5, .n-7, .n-9, .n-12, .n-14, .n-16, .n-18,
  .n-19, .n-21, .n-23, .n-25, .n-27, .n-30, .n-32, .n-34, .n-36
    color: red
    text-align: right

  .n-2, .n-4, .n-6, .n-8, .n-10, .n-11, .n-13, .n-15, .n-17,
  .n-20, .n-22, .n-24, .n-26, .n-28, .n-29, .n-31, .n-33, .n-35
    color: #fff
    text-align: left

  .n-00, .n-.n-0
    color: green
    text-align: center

//helpers
.l
  position: absolute
  border: none

  &.h
    top: 50% 
    left: 0
    width: 100% 
    height: 2px
    margin: -1px 0 0 0
    background: green

  &.v
    top: 0 
    left: 50%
    width: 2px 
    height: 100%
    margin: 0 0 0 -1px
    background: yellow

