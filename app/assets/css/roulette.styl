// Roulette Styles
#roulette-stage
  position: relative;
  width: 520px;
  height: 510px;
  border: 2px solid red;
  margin:  0 auto ;
  background: url("/images/bg.jpg") 0 0 no-repeat;

#roulette
  position: absolute;
  top: 23px; left: 98px;
  width: 325px;
  height: 325px;
  // border: 1px solid orange;

#wheel
  @extend .is_spinning;

  position: absolute;
  top: 50%; left: 50%;
  margin: -115px 0 0 -115px;
  width: 231px;
  height: 231px;
  background: url("/images/wheel.png") center center no-repeat;

#rim-overlay
  position: absolute;
  top: 2px; left: 79px;
  width: 363px;
  height: 363px;
  background: url("/images/overlay.png") 0 0 no-repeat;

#ball-stage
  @extend .is_spinning;

  width: 325px; height: 325px;
  // border: 1px solid blue;



//helpers
.l
  position: absolute;
  border: none;

  &.h
    top: 50%; left: 0;
    width: 100%; height: 2px;
    margin: -1px 0 0 0;
    background: green;

  &.v
    top: 0; left: 50%;
    width: 2px; height: 100%;
    margin: 0 0 0 -1px;
    background: yellow;